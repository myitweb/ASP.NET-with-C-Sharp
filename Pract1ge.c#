/* Write a program test for the vowels. */

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {
             String s;
            Console.WriteLine("Enter the string=");
            s = Console.ReadLine();
            for(int i=0;i<s.Length;i++)
            {
             char letter=s[i];
             String s1 = vowel(letter);
                Console.WriteLine("{0} is {1}",letter,s1);


            }
            Console.ReadKey();
            
        }
        public static string vowel(char a)
        {
            switch (a)
            {
                case 'a':
                case 'A':
                case 'e':
                case 'E':
                case 'i':
                case 'I':
                case 'o':
                case 'O':
                case 'u':
                case 'U':
                    return ("vowel");
                default:
                    return ("not a vowel");
            }
        }
    }
}
