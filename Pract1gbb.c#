/* Generate various patterns (triangles, diamond and other patterns) with numbers. */

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace ConsoleApplication1
{
    class Program
    {
        static void Main(string[] args)
        {
            int i, j, k, bs;
            bs = 3;
            for (i = 1; i <= 4; i++)
            {
                for (k = bs; k > 0; k--)
                {
                    Console.Write(" ");

                }
                bs--;
                for (j = 1; j <= i; j++)
                {
                    Console.Write("*");
                }
                for (int m = 1; m < i; m++)
                {
                    Console.Write("*");
                }
                Console.WriteLine();
            }
            Console.ReadKey();
        }
    }
}
